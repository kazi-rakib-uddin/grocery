<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CartActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_lin"
        android:fillViewport="true"
        android:scrollbars="none"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginVertical="@dimen/_5sdp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cart_btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_1sdp"
                    android:src="@drawable/img_back" />


            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_cart"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/custom_cart_item"
                tools:itemCount="2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/background_white"
                >



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coupons :"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/sans_regular"
                    android:layout_marginLeft="@dimen/_10sdp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:background="@drawable/round_home"
                    android:padding="@dimen/_10sdp">


                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/img_coupons"
                        android:layout_gravity="center"/>


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Apply Copuns"
                        android:textColorHint="@color/colorBlack"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:fontFamily="@font/sans_regular"
                        android:backgroundTint="#EDEFF4"
                        android:layout_weight="1"/>



                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:src="@drawable/img_right_arrow"
                        android:layout_gravity="center"
                        />

                </LinearLayout>

            </LinearLayout>






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/background_white"
                android:visibility="visible">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Details :"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/sans_regular"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SUBTOTAL"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/colorText"
                        android:layout_gravity="center"
                        android:fontFamily="@font/sans_regular"
                        android:layout_marginRight="@dimen/_10sdp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="₹60"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/colorBlack"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:fontFamily="@font/sans_regular"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"/>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DELIVERY CHARGE"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/colorText"
                        android:layout_gravity="center"
                        android:fontFamily="@font/sans_regular"
                        android:layout_marginRight="@dimen/_10sdp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="₹0"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/colorGreen"
                        android:gravity="right"
                        android:fontFamily="@font/sans_regular"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"/>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="COUPON DISCOUNT"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/colorText"
                        android:layout_gravity="center"
                        android:fontFamily="@font/sans_regular"
                        android:layout_marginRight="@dimen/_10sdp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="₹15"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/colorRed"
                        android:gravity="right"
                        android:fontFamily="@font/sans_regular"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"/>


                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TOTAL"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/colorBlack"
                        android:layout_gravity="center"
                        android:fontFamily="@font/sans_regular"
                        android:layout_marginRight="@dimen/_10sdp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="₹45"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/colorBlack"
                        android:gravity="right"
                        android:fontFamily="@font/sans_regular"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"/>


                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/round_home"
                    android:padding="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_10sdp">


                    <ImageView
                        android:id="@+id/gif"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/truck"
                        android:layout_gravity="center"/>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Delivery Charges applied on this order"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/colorBlack"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/sans_regular"
                        android:layout_marginLeft="@dimen/_10sdp"/>


                </LinearLayout>

            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/background_white"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp">



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:layout_weight="1">


                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/img_return"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7 Day Return"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/colorBlack"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/sans_regular"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_gravity="center"/>


                </LinearLayout>



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:layout_weight="1">


                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/img_payment"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Secure Payment"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/colorBlack"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/sans_regular"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_gravity="center"/>


                </LinearLayout>


            </LinearLayout>







        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginVertical="@dimen/_5sdp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_5sdp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOTAL"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/colorText"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/sans_regular"
                android:layout_marginLeft="@dimen/_5sdp"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹45"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/sans_regular"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"/>

        </LinearLayout>



        <Button
            android:id="@+id/btn_checkout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Place order"
            android:background="@drawable/check_out_bg"
            android:fontFamily="@font/sans_medium"
            android:layout_weight="1"
            android:layout_gravity="center"
            />


    </LinearLayout>

</RelativeLayout>