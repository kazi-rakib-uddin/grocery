<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rel"
    tools:context=".Fragment.ProfileFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/logout">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_marginVertical="@dimen/_5sdp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_20sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ProfileImg"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:src="@drawable/img_man"
                    android:padding="@dimen/_5sdp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_gravity="center">



                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_15ssp"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/sans_regular"
                        />



                    <TextView
                        android:id="@+id/mail_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/sans_regular"
                        />




                    <TextView
                        android:id="@+id/edit_profile"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:text="EDIT"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/sans_regular"
                        android:background="@drawable/round_button_skip"
                        android:padding="@dimen/_5sdp"
                        android:textAlignment="center"
                        android:gravity="center"
                        />




                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_10sdp">


                <LinearLayout
                    android:id="@+id/order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/img_order"
                        android:layout_gravity="center"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Order"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textSize="@dimen/_14ssp"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/sans_regular"
                            android:layout_marginLeft="@dimen/_15sdp"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ongoing Orders, Recent Orders.."
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/sans_regular"
                            android:layout_marginLeft="@dimen/_15sdp"
                            />



                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGray"
                    android:layout_marginTop="@dimen/_8sdp"/>




                <LinearLayout
                    android:id="@+id/wish_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/img_wishlist"
                        android:layout_gravity="center"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your Wishlist"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textSize="@dimen/_14ssp"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/sans_regular"
                            android:layout_marginLeft="@dimen/_15sdp"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your Save Products"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/sans_regular"
                            android:layout_marginLeft="@dimen/_15sdp"
                            />



                    </LinearLayout>


                </LinearLayout>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGray"
                    android:layout_marginTop="@dimen/_8sdp"/>



                <LinearLayout
                    android:id="@+id/my_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/img_address"
                        android:layout_gravity="center"/>



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Address"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textSize="@dimen/_14ssp"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/sans_regular"
                            android:layout_marginLeft="@dimen/_15sdp"
                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Home, Office.."
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/sans_regular"
                            android:layout_marginLeft="@dimen/_15sdp"
                            />

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGray"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:visibility="gone"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/img_notification"
                        android:layout_gravity="center"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Notification"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textSize="@dimen/_15ssp"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/sans_regular"
                            android:layout_marginLeft="@dimen/_15sdp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Offers, Order Tracking Message.."
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/sans_regular"
                            android:layout_marginLeft="@dimen/_15sdp"
                            />

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGray"
                    android:layout_marginTop="@dimen/_8sdp"/>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/img_help"
                        android:layout_gravity="center"/>



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Help"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textSize="@dimen/_14ssp"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/sans_regular"
                            android:layout_marginLeft="@dimen/_15sdp"
                            />



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Customer Support, FAQs.."
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/sans_regular"
                            android:layout_marginLeft="@dimen/_15sdp"
                            />


                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGray"
                    android:layout_marginTop="@dimen/_8sdp"/>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/img_terms"
                        android:layout_gravity="center"/>



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Terms &amp; Conditions "
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textSize="@dimen/_14ssp"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/sans_regular"
                            android:layout_marginLeft="@dimen/_15sdp"
                            />



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="T&amp;C For Use of Platform"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textSize="@dimen/_10ssp"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/sans_regular"
                            android:layout_marginLeft="@dimen/_15sdp"
                            />


                    </LinearLayout>


                </LinearLayout>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGray"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:visibility="gone"/>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/img_logout"/>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Logout"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/sans_regular"
                        android:layout_marginLeft="@dimen/_15sdp"
                        />


                </LinearLayout>



            </LinearLayout>





        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_60sdp"
        android:background="@drawable/background_white"
        android:gravity="center"
        android:padding="@dimen/_10sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sans_regular"
            android:text="LOG OUT"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12ssp" />

    </LinearLayout>


</RelativeLayout>